<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tools.Styles">

    <Style TargetType="TextBlock" x:Key="TitleTextBlock">
        <Setter Property="Margin" Value="0,20,0,5"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="FirstTitalTextBlock">
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="Margin" Value="20,10,0,0"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="SecondTitalTextBlock">
        <Setter Property="Margin" Value="0,20,0,10"/>
        <Setter Property="FontSize" Value="25"/>
    </Style>

</ResourceDictionary>
